  <script>
    // JavaScript for carousel functionality
    var currentSlideIndex = 0;
    var propertySlides = document.querySelectorAll('.property-slide');

    function showSlide(index) {
        propertySlides.forEach(function(slide) {
            slide.style.display = 'none';
        });

        propertySlides[index].style.display = 'block';
    }

    function nextSlide() {
        currentSlideIndex++;
        if (currentSlideIndex >= propertySlides.length) {
            currentSlideIndex = 0;
        }
        showSlide(currentSlideIndex);
    }

    // Auto-advance the carousel every 5 seconds
    setInterval(nextSlide, 5000);
</script>
