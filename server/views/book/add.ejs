<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Your lisings</h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Listing Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the listings name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Price</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the price"
                    name="author" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">location</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the location"
                    name="published" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the property"
                    name="description" required></textarea>
                </div>

            

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



