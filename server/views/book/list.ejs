<!DOCTYPE html>
<html lang="en">
     <%- include ../partials/header %>
     <header>
          <%- include ../partials/main_nav%>
     </header>
     <style>
        /* Sample CSS for illustration purposes. Customize as needed */
        body {
            font-family: Arial, sans-serif;
            background-color: #f0ecec;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #5e81b9;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        main {
            padding: 40px;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .team-member {
            display: flex;
            align-items: center;
            margin-bottom: 40px;
        }

        .team-member img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            margin-right: 20px;
        }

        .team-member .info {
            flex: 1;
        }

        .team-member h3 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #336699; /* Highlight team member names with a specific color */
        }

        .team-member p {
            font-size: 16px;
            color: #666;
        }

        .about-image {
            text-align: center;
            margin-bottom: 40px;
        }

        .about-image img {
            max-width: 100%;
            max-height: 300px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Add a subtle shadow effect to the image */
        }

        .mission-section {
            background-color: #f7f4f4; /* Use a light background color for the mission section */
            padding: 30px;
            margin-bottom: 40px;
            border-radius: 5px;
            border: 1px solid rgb(136, 135, 135);
        }

        .why-choose-section {
            margin-bottom: 40px;
            font-size: small;
        }

        .why-choose-section ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .why-choose-section li {
            font-size: 17px;
            margin-bottom: 10px;
            padding-left: 25px;
            position: relative;
        }

        .why-choose-section li:before {
            content: '\2022'; /* Use a bullet point (â€¢) as the list item marker */
            position: absolute;
            left: 0;
            top: 8px;
            color: #336699; /* Set the color of the bullet point */
        }
        .footer{
 color: #f0f0f0;
        }
    </style>
</head>
<body>
    <header>
        <h1>Listings</h1>
      
    </header>

 <!-- Main Content -->
 <main class="container" >
    <div class="row">
        <div class="offset-md-1 col-md-11">
            

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/book-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add your listing</a>
            <% } %>
            <br>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">name</th>
                        <th class="text-center col-2">location</th>
                        <th class="text-center col-1">price</th>
                        <th class="col-4">Description</th>
                      
                    <% } else { %>
                        <th class="text-center col-2">name</th>
                        <th class="text-center col-2">location</th>
                        <th class="text-center col-1">price</th>
                        <th class="col-6">Description</th>
                       
                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < BookList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2"><%= BookList[count].name %></td>
                            <td class="text-center col-2"><%= BookList[count].author %></td>
                            <td class="text-center col-1"><%= BookList[count].published %></td>
                            <td class="col-4"><%= BookList[count].description %></td>
                                
                            <td class="text-center col-1">
                                <a href="/book-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-2"><%= BookList[count].name %></td>
                            <td class="text-center col-2"><%= BookList[count].author %></td>
                            <td class="text-center col-1"><%= BookList[count].published %></td>
                            <td class="col-6"><%= BookList[count].description %></td>
                         
                         <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
     <footer class="footer mt-auto py-2 fixed-bottom" style="background-color:rgb(52,58,64)">
          <%- include ../partials/bottom_nav.ejs %>  
        <%- include ../partials/footer%>
    </footer>
</html>

