<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact name</label>
                    <input type="text" class="form-control"
                    id="contactnameTextField"
                    placeholder="Enter the Contact Name"
                    name="contactname" 
                    value="<%= contact.contactname %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="contactnumberTextField"
                    placeholder="Enter the Contact Number"
                    name="contactnumber" 
                    value="<%= contact.contactnumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailaddressTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailaddressTextField"
                    placeholder="Enter Your Email Address"
                    name="emailaddress" 
                    value="<%= contact.emailaddress %>"
                    required>
                </div>

            
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                        <a href="/contact-list/delete/<%= contact._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>

            </form>
        </div>

    </div>
</div>

<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>